<window id="123">
  <defaultcontrol>2</defaultcontrol>
  <zorder>1</zorder>

  <controls>

    <control type="group">
      <include>HorizWideDialogPos</include>
      <include>VideoOSDSlideLeft</include>
      <visible>!Window.IsVisible(SliderDialog)</visible>

      <control type="image">
        <description>Background Image</description>
        <posx>-20</posx>
        <include>HorizWideDialogBGDims</include>
        <include>OverlayDarkArea</include>
      </control>

      <control type="label" id="2">
        <description>Settings</description>
        <posy>10</posy>
        <width>HorizWideDialogTextWidth</width>
        <font>MediumTitleFont</font>
      </control>

      <control type="label" id="3">
        <description>No Settings</description>
        <posx>170</posx>
        <posy>170</posy>
        <label>13390</label>
        <font>MediumDefaultFont</font>
      </control>

      <control type="grouplist" id="5">
        <description>control area</description>
        <posx>-8</posx>
        <posy>40</posy>
        <width>HorizWideDialogTextWidth</width>
        <height>480</height>
        <itemgap>0</itemgap>
        <onleft>28</onleft>
        <onright>60</onright>
        <onup>5</onup>
        <ondown>5</ondown>
      </control>

      <control type="button" id="7">
        <description>Button</description>
        <textoffsety>4</textoffsety>
        <font>SmallTitleFont</font>
        <include>DialogTextControl</include>
      </control>

      <control type="radiobutton" id="8">
        <description>Radiobutton</description>
        <width>360</width>
        <textoffsetx>10</textoffsetx>
        <textoffsety>2</textoffsety>
        <include>DialogTextControl</include>
      </control>

      <control type="spincontrolex" id="9">
        <description>Spincontrolex</description>
        <width>500</width>
        <include>VideoOSDSettingsSpinControlDims</include>
        <include>DialogTextControl</include>
      </control>

      <control type="sliderex" id="10">
        <description>Slider</description>
        <include>DialogTextControl</include>
      </control>
    </control>

  </controls>
</window>
