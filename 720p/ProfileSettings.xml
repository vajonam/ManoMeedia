          <width>98</width>
          <height>98</height>
          <texture>unknown_user.png</texture>
          <colordiffuse>ffffffff</colordiffuse>
          <aspectratio>keep</aspectratio>
        </control>

        <control type="label">
          <description>Profile Directory</description>
          <posx>620</posx>
          <width>520</width>
          <scroll>true</scroll>
          <align>right</align>
          <textcolor>Unfocused</textcolor>
          <font>SmallTitleFont</font>
          <label>20070</label>
