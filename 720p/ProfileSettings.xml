          <scroll>true</scroll>
          <align>right</align>
          <textcolor>Unfocused</textcolor>
        </control>

        <control type="grouplist" id="5">
          <description>Profile Options</description>
          <posy>102</posy>
          <width>600</width>
          <height>100</height>
          <onup>1000</onup>
          <ondown>28</ondown>
          <onleft>28</onleft>
          <onright>5</onright>
          <itemgap>0</itemgap>
          <pagecontrol>101</pagecontrol>
        </control>

        <control type="button" id="7">
          <description>Default Button</description>
          <textoffsetx>10</textoffsetx>
          <align>left</align>
          <font>MediumDefaultFont</font>
          <texturenofocus>-</texturenofocus>
